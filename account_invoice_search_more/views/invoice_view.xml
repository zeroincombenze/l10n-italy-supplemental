<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_invoice_filter" model="ir.ui.view">
            <field name="name">account.invoice.select</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <search string="Search Account Invoice">
                    <field name="product_id"/>
                    <field name="account_line_id"/>
                </search>
            </field>
        </record>

        <record id="view_invoice_line_filter" model="ir.ui.view">
            <field name="name">account.invoice.line.select</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
                <search string="Search Account Invoice">
                    <field name="product_id"/>
                    <field name="account_id"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

</odoo>
