<?xml version="1.0" encoding="utf-8"?>
<odoo>
     
    <record id="view_account_journal_form_eu" model="ir.ui.view">
        <field name="name">account.journal.form.eu</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
               
            <field name="group_invoice_lines" position="after">
                <field name="group_inv_lines_mode" attrs="{'invisible': [('type', 'not in', ['sale', 'purchase'])]}"/>
            </field>
            <field name="group_invoice_lines" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>

        </field>
    </record>

</odoo>

