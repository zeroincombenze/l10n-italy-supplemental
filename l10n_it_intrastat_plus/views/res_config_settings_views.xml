<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="open_account_charts_modules_extend" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.extend</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_followup']" position="after">
                <div class="col-12 col-lg-12 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="setup_invoice_bottom_message"/>
                        <field name="setup_invoice_bottom_message" />
                    </div>
                </div>
                <separator/>
            </xpath>
        </field>
    </record>

</odoo>

