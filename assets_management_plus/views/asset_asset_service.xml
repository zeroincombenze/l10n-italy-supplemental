<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asset_asset_service_form_view" model="ir.ui.view" >
        <field name="name">account.asset.service.form</field>
        <field name="model">asset.asset.service</field>
        <field name="arch" type="xml">
            <form string="Spese di manutenzione">
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="service_rate"/>
                </group>
            </form>
        </field>
    </record>

    <record id="asset_asset_service_tree_view" model="ir.ui.view">
        <field name="name">account.asset.service.tree</field>
        <field name="model">asset.asset.service</field>
        <field name="arch" type="xml">
            <tree string="Spese di manutenzione">
                <field name="name"/>
                <field name="code"/>
                <field name="service_rate"/>
            </tree>
        </field>
    </record>


    <record id="asset_asset_service_action" model="ir.actions.act_window">
        <field name="name">Spese di manutenzione</field>
        <field name="res_model">asset.asset.service</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="asset_asset_service_tree_view"/>
    </record>

    <menuitem id="account_asset_service_menu"
            action="asset_asset_service_action"
            parent="assets_management.menu_asset_configuration"
            sequence="210"
    />

</odoo>
