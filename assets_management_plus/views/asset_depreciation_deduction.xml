<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asset_depreciation_deduction_form_view" model="ir.ui.view" >
        <field name="name">asset.depreciation.deduction.form</field>
        <field name="model">asset.depreciation.deduction</field>
        <field name="arch" type="xml">
            <form string="Tipo deducibilità">
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="deduction_rate"/>
                    <field name="deduction_limit"/>
                </group>
            </form>
        </field>
    </record>

    <record id="asset_depreciation_deduction_tree_view" model="ir.ui.view">
        <field name="name">asset.depreciation.deduction.tree</field>
        <field name="model">asset.depreciation.deduction</field>
        <field name="arch" type="xml">
            <tree string="Tipo deducibilità">
                <field name="name"/>
                <field name="code"/>
                <field name="deduction_rate"/>
                <field name="deduction_limit"/>
            </tree>
        </field>
    </record>


    <record id="asset_depreciation_deduction_action" model="ir.actions.act_window">
        <field name="name">Tipo deducibilità</field>
        <field name="res_model">asset.depreciation.deduction</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="asset_depreciation_deduction_tree_view"/>
    </record>

    <menuitem id="account_asset_depreciation_deduction_menu"
            action="asset_depreciation_deduction_action"
            parent="assets_management.menu_asset_configuration"
            sequence="310"
    />

</odoo>
