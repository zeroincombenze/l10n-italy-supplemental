<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="asset_view_form_plus" model="ir.ui.view">
    <field name="name">account.asset.form.plus</field>
    <field name="model">asset.asset</field>
    <field name="inherit_id" ref="assets_management.asset_form_view" />
    <field name="arch" type="xml">
<!--      <xpath expr="/form/sheet/group/group/field[@name='category_id']" position="after">-->
<!--        <field name="group_ids" widget="many2many_tags"/>-->
<!--      </xpath>-->

      <xpath expr="/form/sheet/group/group/field[@name='used']" position="after">
        <field name="deduction_type"/>
        <field name="active"/>
        <field name="serial_number"/>
        <field name="service_contract"/>
        <field name="service_type" attrs="{'invisible':[('service_contract', '=', False)] }"/>
      </xpath>

      <xpath expr="/form/sheet/group[2]/group/field[@name='purchase_amount']" position="after">
        <field name="purchase_qty" />
      </xpath>

      <xpath expr="/form/sheet/group[@name='sale_purchase_info']" position="after">
        <group>
          <field name="note"/>
        </group>
      </xpath>

      <xpath expr="//notebook/page[@name='accounting_info']" position="after">
            <page name="fiscal_data" string="Dati fiscali">
              <group>
                <field name="deduction_type" />
                <field name="deduction_rate" />
                <field name="deduction_limit" />
              </group>
            </page>
      </xpath>

    </field>
  </record>

  <record id="asset_view_tree_plus" model="ir.ui.view">
    <field name="name">account.asset.tree.plus</field>
    <field name="model">asset.asset</field>
    <field name="inherit_id" ref="assets_management.asset_tree_view" />
    <field name="arch" type="xml">

      <xpath expr="//field[@name='code']" position="after">
        <field name="active"/>
      </xpath>

      <xpath expr="//field[@name='purchase_amount']" position="after">
        <field name="purchase_qty" />
      </xpath>

    </field>
  </record>

