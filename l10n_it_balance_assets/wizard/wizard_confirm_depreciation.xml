<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_confirm_depreciation" model="ir.ui.view">
        <field name="name">wizard.confirm.depreciation</field>
        <field name="model">wizard.confirm.depreciation</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Conferma">
                <group>
                    <field name="message" readonly="1"/>
                </group>

                <footer>
                    <button name="conferma_anomalie"
                            string="Conferma la generazione?"
                            type="object"
                            class="oe_highlight" />

                    <button string="Chiudi" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>

