<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="wizard_partners_opening">
        <field name="name">Import Account Opening</field>
        <field name="model">wizard.import.partners</field>
        <field name="arch" type="xml">
            <form string="Import Account Opening from file Excel" >
                <group colspan="4">
                    <group colspan="2" col="2">
                        <field name="data_file" filename="filename"
                               placeholder="Choose a file to import..."/>
                        <field name="filename" invisible="1"/>
                        <separator string="Parameters"/>
                        <field name="dry_run"/>
                    </group>
                    <group colspan="2" col="1">
                        <p>Please, import just xlsx files.</p>
                        <p>Import file heade Ã¬r must be:</p>
                        <p>"Codice" "Nome" "Cliente" "Fornitore" "Partita IVA" "Riferimento" "Dare" "Avere"</p>
                        <p>Please set 1 in one of "Cliente" or "Fornitore" for partner</p>
                        <p>Please set only one value in one of "Dare" "Avere"</p>
                    </group>
                </group>
                <footer>
                    <button string="Import" name="import_xls"
                            type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="wizard_import_partners_result">
        <field name="name">Import Partners</field>
        <field name="model">wizard.import.partners</field>
        <field name="arch" type="xml">
            <form string="Result of Account Opening" >
                <group>
                        <field name="tracelog" readonly = "1"/>
                </group>
                <footer>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_partners" model="ir.actions.act_window">
        <field name="key2">client_action_multi</field>
        <field name="name">Import Account Opening</field>
        <field name="res_model">wizard.import.partners</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_import_partners"
              name="Import Partners"
              action="action_import_partners"
              parent="base.menu_custom"
              sequence="90"
              />

</odoo>
