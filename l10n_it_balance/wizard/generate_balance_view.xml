<?xml version="1.0" ?>
<odoo>

    <record id="wizard_generate_balance_form" model="ir.ui.view">
        <field name="name">wizard.generate.balance.form</field>
        <field name="model">wizard.generate.balance</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <group colspan="2">
                        <field name="name"/>
                        <field name="fiscalyear_id"/>
                        <field name="date_range_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="last_update"/>
                    </group>
                    <group name="main_info" col="2">
                        <field name="balance_type" readonly="1"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    </group>
                </group>
                <notebook colspan="4">
                    <page string="Filtri registrazione">
                        <group>
                            <field name="date_balance_option"/>
                        </group>
                        <group>
                            <field name="target_move"/>
                        </group>
                        <group>
                            <field name="order_by"/>
                        </group>
                    </page>
                    <page string="Filtri tipologia">
                        <group>
                            <field name="nature_of_accounts"/>
                            <field name="select_details"/>
                            <field name="view_partner_details"/>
                            <field name="hierarchy_level"/>
                            <field name="no_accounting_closure"/>
                            <field name="no_adjustment_records"/>
                            <field name="receivable_account_only"/>
                            <field name="payable_account_only"/>
                        </group>
                    </page>
                    <page string="Filtri importi">
                        <group>
                            <field name="no_opening_balances" />
                            <!-- <field name="hide_account_at_0"/> -->
                            <field name="rounding"/>
                            <field name="no_nature_total" />
                            <field name="no_grand_total" attrs="{'invisible': [('balance_type', '=', 'opposite')]}"/>
                            <field name="inversion" attrs="{'invisible': [('balance_type', '=', 'trial')]}"/>
                        </group>
                    </page>
                    <page string="Proiezioni" attrs="{'invisible': [('balance_type', '=', 'trial')]}">
                        <group>
                            <field name="evaluate_accrual" readonly="1"/>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button class="btn-primary"
                            type="object"
                            name="generate_balance"
                            string="Genera" />
                    <button class="btn-default"
                            special="cancel"
                            string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_generate_balance" model="ir.actions.act_window">
        <field name="name">Genera Bilancio</field>
        <field name="res_model">wizard.generate.balance</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
