<?xml version="1.0" ?>
<odoo>

    <record id="wizard_generate_balance_opposite_xls_file" model="ir.ui.view">
        <field name="name">Generazione file</field>
        <field name="model">wizard.balance.opposite.export.xls</field>
        <field name="arch" type="xml">
            <form string="Generazione File">
                <group>
                    <field name="file_type" />
                </group>
                <footer>
                    <button name="generate"
                            string="Genera"
                            type="object"
                            class="oe_highlight" />
                            o
                    <button string="Annulla" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_generate_balance_opposite_xls_exit" model="ir.ui.view">
        <field name="name">Esportazione file - Pronto</field>
        <field name="model">wizard.balance.opposite.export.xls</field>
        <field name="arch" type="xml">
            <form string="Export">
                <group>
                    <field name="file_export" readonly="1" filename="name"/>
                    <field name="name" invisible="1"/>
                </group>
                <footer>
                    <button string="Chiudi" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_generate_balance_opposite_file" model="ir.actions.act_window">
        <field name="name">Generazione file</field>
        <field name="res_model">wizard.balance.opposite.export.xls</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_generate_balance_opposite_xls_file"/>
        <field name="target">new</field>
    </record>

</odoo>

