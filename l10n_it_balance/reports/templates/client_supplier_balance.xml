<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="l10n_it_balance_a4_landscape" model="report.paperformat">
        <field name="name">Balance Reports A4 Landscape</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">35</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">30</field>
        <field name="dpi">90</field>
    </record>

    <report
           id="report_balance_supplier_customer_pdf"
           string="Dettagli Clienti / Fornitori"
           report_type="qweb-pdf"
           model="italy.account.balance"
           name="l10n_it_balance.report_supplier_customer_pdf"
           file="l10n_it_balance.report_supplier_customer_pdf"
           paperformat="l10n_it_balance.l10n_it_balance_a4_landscape"
           />

    <template id="report_supplier_customer_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <h2 style="margin-top: 35px;padding-top: 10px;">Dettagli clienti / fornitori</h2>
                    <div style="clear: both;width:100%; margin: 10px auto;page-break-inside: avoid;page-break-before:auto;">
                        <t t-if="doc.balance_line_customers_ids">
                        <table class="table table-striped table-bordered" align="left" style="width:48%;margin-right:5px;">
                            <caption>Clienti</caption>
                            <thead>
                                <tr>
                                    <th style="padding: 5px;">Conto</th>
                                    <th style="padding: 5px;">Descrizione</th>
                                    <th style="padding: 5px;">Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.balance_line_customers_ids" t-as="l" style="padding: 5px;">
                                    <td style="padding: 5px;"><span t-field="l.code"/></td>
                                    <td style="padding: 5px;"><span t-field="l.name"/></td>
                                    <td style="padding: 5px;text-align:right;"><span t-field="l.amount_balance"/></td>
                                </tr>
                            </tbody>
                        </table>
                        </t>
                        <t t-if="doc.balance_line_suppliers_ids">
                        <table class="table table-striped table-bordered" align="right" style="width:48%;">
                            <caption>Fornitori</caption>
                            <thead>
                                <tr>
                                    <th style="padding: 5px;">Conto</th>
                                    <th style="padding: 5px;">Descrizione</th>
                                    <th style="padding: 5px;">Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.balance_line_suppliers_ids" t-as="l" style="padding: 5px;">
                                    <td style="padding: 5px;"><span t-field="l.code"/></td>
                                    <td style="padding: 5px;"><span t-field="l.name"/></td>
                                    <td style="padding: 5px;text-align:right;"><span t-field="l.amount_balance"/></td>
                                </tr>
                            </tbody>
                        </table>
                        </t>
                    </div>

                </t>
            </t>
        </t>
    </template>

</odoo>
