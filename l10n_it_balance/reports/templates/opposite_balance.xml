<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="l10n_it_balance_opposite_a4_landscape" model="report.paperformat">
        <field name="name">Opposite Balance Reports A4 Landscape</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">30</field>
        <field name="dpi">90</field>
    </record>


    <report
           id="report_opposite_balance_demo_pdf"
           string="Bilancio a conti contrapposti"
           report_type="qweb-pdf"
           model="italy.account.balance"
           name="l10n_it_balance.report_opposite_demo_pdf"
           file="l10n_it_balance.report_opposite_demo_pdf"
           paperformat="l10n_it_balance.l10n_it_balance_opposite_a4_landscape"
           menu="False"
           />


    <template id="report_opposite_demo_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <h2 style="margin-top: 15px;">Bilancio a conti contrapposti</h2>
                    <div><b>Data inizio</b>: <t t-esc="doc.date_from" t-options='{"widget": "date"}'/> <b>Data fine</b>: <t t-esc="doc.date_to" t-options='{"widget": "date"}'/></div>

                    <div style="clear: both;width:100%; margin: 10px auto;page-break-inside: avoid;page-break-before:auto;">
                        <h3>Stato patrimoniale</h3>

                        <table class="table table-striped table-bordered" align="left" style="width:49%;margin-right:5px;">
                            <caption>Attività</caption>
                            <thead>
                                <tr>
                                    <th style="padding: 5px;">Conto</th>
                                    <th style="padding: 5px;">Descrizione</th>
                                    <th style="padding: 5px;">Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.balance_line_asset_ids" t-as="l" style="padding: 5px;">
                                    <td style="padding: 5px;"><span t-field="l.code"/></td>
                                    <td style="padding: 5px;"><span t-field="l.name"/></td>
                                    <td style="padding: 5px;text-align:right;"><span t-field="l.amount_balance"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <table class="table table-striped table-bordered" align="right" style="width:49%;">
                            <caption>Passività</caption>
                            <thead>
                                <tr>
                                    <th style="padding: 5px;">Conto</th>
                                    <th style="padding: 5px;">Descrizione</th>
                                    <th style="padding: 5px;">Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.balance_line_liability_ids" t-as="l" style="padding: 5px;">
                                    <td style="padding: 5px;"><span t-field="l.code"/></td>
                                    <td style="padding: 5px;"><span t-field="l.name"/></td>
                                    <td style="padding: 5px;text-align:right;"><span t-field="l.amount_balance"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div style="clear: both;width:100%; margin-top: 50px; margin-bottom: 25px; margin-left: auto; margin-right: auto;page-break-inside: avoid;page-break-before:always;">
                        <h3>Conto economico</h3>
                        <table class="table table-striped table-bordered" align="left" style="width:49%;margin-right:5px;">
                            <caption>Costi</caption>
                            <thead>
                                <tr >
                                    <th style="padding: 5px;">Conto</th>
                                    <th style="padding: 5px;">Descrizione</th>
                                    <th style="padding: 5px;">Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.balance_line_expense_ids" t-as="l" style="padding: 5px;">
                                    <td style="padding: 5px;"><span t-field="l.code"/></td>
                                    <td style="padding: 5px;"><span t-field="l.name"/></td>
                                    <td style="padding: 5px;text-align:right;"><span t-field="l.amount_balance"/></td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-striped table-bordered" align="right" style="width:49%;">
                            <caption>Ricavi</caption>
                            <thead>
                                <tr>
                                    <th style="padding: 5px;">Conto</th>
                                    <th style="padding: 5px;">Descrizione</th>
                                    <th style="padding: 5px;">Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.balance_line_income_ids" t-as="l" style="padding: 5px;">
                                    <td style="padding: 5px;"><span t-field="l.code"/></td>
                                    <td style="padding: 5px;"><span t-field="l.name"/></td>
                                    <td style="padding: 5px;text-align:right;"><span t-field="l.amount_balance"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div style="clear: both;width:100%;margin: 15px auto;page-break-inside: avoid;page-break-before:always;">
                        <h3>Conti d'ordine</h3>
                        <table class="table table-striped table-bordered" style="width:100%;">
                            <caption>Conti d'ordine</caption>
                            <thead>
                                <tr style="margin: 5px;">
                                    <th style="padding: 5px;">Conto</th>
                                    <th style="padding: 5px;">Descrizione</th>
                                    <th style="padding: 5px;">Saldo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.balance_line_memorandum_ids" t-as="l" style="padding: 5px;">
                                    <td style="padding: 5px;"><span t-field="l.code"/></td>
                                    <td style="padding: 5px;"><span t-field="l.name"/></td>
                                    <td style="padding: 5px;text-align:right;"><span t-field="l.amount_balance"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </t>
            </t>
        </t>
    </template>

</odoo>

