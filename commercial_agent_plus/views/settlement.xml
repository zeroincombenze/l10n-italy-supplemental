<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="seq_settlement" model="ir.sequence">
            <field name="name">Settlement Order</field>
            <field name="code">commercial.agent.settlement</field>
            <field name="prefix">SE</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"></field>
        </record>
    </data>
    <record id="settlement_view_form" model="ir.ui.view">
        <field name="name">settlement.view.form</field>
        <field name="model">commercial.agent.commission.settlement</field>
        <field name="arch" type="xml">
            <form string="" delete="false">
                <header>
                    <button type="object" name="force_settle" string="Force Settle" 
                    class="btn-warning" attrs="{'invisible': ['|',('state', '!=', 'draft'),('warning_msg','=','')]}"/>
                    
                    <button type="object" name="settle" string="Settle" 
                    class="btn-primary" attrs="{'invisible': ['|',('state', '!=', 'draft'),('warning_msg','!=','')]}"/>
                    
                    

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>

<!--                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" -->
<!--                    attrs="{'invisible': [('active', '=', True)]}"/>-->
                    
                    <div class="alert alert-warning" role="alert" 
                    attrs="{'invisible': [('warning_msg', '=', '')]}">
                        <field name="warning_msg" />
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="agent_id" required="1"
                            attrs="{'readonly': [('state','=','invoiced')]}"/>
                            <field name="commission_type" />
                            <field name="partner_agent_id" invisible="1"/>
                        </group>
                        <group>
                            <label for="date_from" string="Data" 
                            attrs="{'readonly': [('state','=','invoiced')]}"/>
                            <div class="o_row" attrs="{'readonly': [('state','=','invoiced')]}">
                                <field name="date_from"
                                nolabel="1" class="oe_inline" 
                                options="{'related_end_date': 'date_to'}" 
                                required="1"/>
                                <i class="fa fa-long-arrow-right mx-2" 
                                aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_to"
                                nolabel="1" class="oe_inline" 
                                options="{'related_start_date': 'date_from'}" 
                                required="1"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="active" />
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="forced" invisible="1"/>
                            <field name="forced_by" attrs="{'invisible':[('forced','=',False)]}"
                            readonly="1"/>
                        </group>
                    </group>
                    <group string="Note">
                        <field name="note" nolabel="1"/>
                    </group>
                    <notebook>
                        
                        
                        <page name="commission_orders" string="Commission Orders">
                            <field name="commission_order_ids" nolabel="1" readonly="1">
                                <tree>
                                    <field name="sale_order_id" />
                                    <field name="date_order" />
                                    <field name="agent_id" />
                                    <field name="total_order_amount" sum="Amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group name="note_group" col="6" class="mt-2 mt-md-0">
                        <group colspan="4">
                            
                        </group>
                        <group class="oe_subtotal_footer oe_right" colspan="2" 
                        name="commission_total">
                            
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="total_to_settle"/>
                            </div>
                            <field name="total_to_settle" readonly="1" nolabel="1" 
                            class="oe_subtotal_footer_separator" widget="monetary" 
                            options="{'currency_field': 'currency_id'}"/>

                            <field name="total_to_subtract" widget="monetary" 
                            options="{'currency_field': 'currency_id'}"
                            attrs="{'invisible':[('total_to_subtract','=',0)]}"/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label"
                            attrs="{'invisible':[('total_to_subtract','=',0)]}">
                                <label for="total_settle"/>
                            </div>
                            <field name="total_settle" readonly="1" nolabel="1" 
                            class="oe_subtotal_footer_separator" widget="monetary" 
                            options="{'currency_field': 'currency_id'}"
                            attrs="{'invisible':[('total_to_subtract','=',0)]}"/>
                        </group>
                        <div class="oe_clear"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="settlement_view_tree" model="ir.ui.view">
        <field name="name">settlement.view.tree</field>
        <field name="model">commercial.agent.commission.settlement</field>
        <field name="arch" type="xml">
            <tree string="" delete="false">
                <field name="name" />
                <field name="agent_id" />
                <field name="date_from" />
                <field name="date_to" />
                <field name="total_settle" sum="Total to Settle"/>
                <field name="state" string="Status" />
            </tree>
        </field>
    </record>

    <record id="admin_settlement_view_form" model="ir.ui.view">
        <field name="name">admin.settlement_view_form</field>
        <field name="model">commercial.agent.commission.settlement</field>
        <field name="inherit_id" ref="settlement_view_form"/>
        <field name="groups_id" eval="[
        (6, 0, [ref('commercial_agent_plus.commercial_agent_plus_agent_admin_group')])]" />
        <field name="arch" type="xml">
            <field name="commission_type" position="after">
                <field name="agent_invoice_id" 
                attrs="{'invisible':[('state','=','draft')],
                'readonly': [('state','=','invoiced')]}"
                domain="[('partner_id','=',partner_agent_id),('type','=','in_invoice')]"/>
            </field>
            <page name="commission_orders" position="before">
                <page name="invoices" string="Invoices" 
                attrs="{'invisible':[('commission_type','!=','invoiced')]}">
                    <field name="invoice_ids" nolabel="1" readonly="1">
                        <tree>
                            <field name="name" />
                            <field name="amount_untaxed_signed" />
                            <field name="amount_total_signed" sum="Amount"/>
                            <field name="settlement_commission" 
                            sum="Commission" widget="monetary"
                            options="{'currency_field': 'currency_id'}"/>
                            <field name="state" />
                        </tree>
                    </field>
                    <group string="Reverse Invoices" 
                    attrs="{'invisible': [('reverse_invoice_ids', '=', [])]}">
                        <field name="reverse_invoice_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="name" />
                                <field name="amount_untaxed_signed" />
                                <field name="amount_total_signed" sum="Amount"/>
                                <field name="settlement_commission" 
                                sum="Commission" widget="monetary"
                                options="{'currency_field': 'currency_id'}"/>
                                <field name="state" />
                            </tree>
                        </field>
                    </group>
                </page>
                <page name="payments" string="Payments" 
                attrs="{'invisible':[('commission_type','!=','cashed')]}">
                    <field name="payment_ids" nolabel="1" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="reconciled_invoice_ids" 
                            widget="many2many_tags"/>
                            <field name="payment_method_id"/>
                            <field name="partner_id" string="Customer"/>
                            <field name="amount" sum="Amount" widget="monetary"
                            options="{'currency_field': 'currency_id'}"/>
                            <field name="settlement_commission" 
                            sum="Commission" widget="monetary"
                            options="{'currency_field': 'currency_id'}"/>
                            <field name="state" />
                            <field name="currency_id" 
                            groups="base.group_multi_currency"/>
                        </tree>
                    </field>
                    
                    <group string="Reverse Payments" 
                    attrs="{'invisible': [('reverse_payment_ids', '=', [])]}">
                        <field name="reverse_payment_ids" nolabel="1" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="reconciled_invoice_ids" 
                                widget="many2many_tags"/>
                                <field name="payment_method_id"/>
                                <field name="partner_id" string="Customer"/>
                                <field name="amount" sum="Amount" widget="monetary"
                                options="{'currency_field': 'currency_id'}"/>
                                <field name="settlement_commission" 
                                sum="Commission" widget="monetary"
                                options="{'currency_field': 'currency_id'}"/>
                                <field name="state" />
                                <field name="currency_id" 
                                groups="base.group_multi_currency"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </page>
            <header position="inside">
                <button type="object" name="get_reverse_payments" 
                    string="Search Reversed Payments" 
                    class="btn-info" 
                    attrs="{'invisible': ['|','|',('commission_type','=','invoiced'),('state','not in',['settled', 'draft']),('reverse_payment_ids','!=',[])]}"/>
                    
                    <button type="object" name="get_reverse_invoices" 
                    string="Search Reversed Invoices" 
                    class="btn-info" 
                    attrs="{'invisible': ['|','|',('commission_type','=','cashed'),('state','not in',['settled', 'draft']),('reverse_invoice_ids','!=',[])]}"/>
                    
            </header>
        </field>
    </record>
</odoo>
