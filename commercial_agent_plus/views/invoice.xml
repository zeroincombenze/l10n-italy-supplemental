<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--inherit-->
    <record id="view_move_form_inherit_commercial_agent_plus" model="ir.ui.view">
        <field name="name">view.move.form.inherit.commercial.agent.plus</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//div[hasclass('oe_title')]" position="before">-->
            <xpath expr="//header" position="after">
                <div class="alert alert-danger" role="alert" 
                attrs="{'invisible': [('commercial_agent_msg', '=', '')]}">
                    <field name="commercial_agent_msg" />
                </div>
            </xpath>
            <field name="user_id" position="after">
                <field name="commercial_agent_id" />
            </field>
            <field name="date_invoice" position="after">
                <field name="agent_reverse" widget="boolean_button"
                attrs="{'invisible':[('type','!=','out_refund')]}"/>
            </field>
        </field>
    </record>

</odoo>