<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="commercial_agent_area_view_tree" model="ir.ui.view">
        <field name="name">commercial_agent_area.view.tree</field>
        <field name="model">commercial.agent.area</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
                <field name="description" />
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="commercial_agent_area_view_form" model="ir.ui.view">
        <field name="name">commercial_agent_area.view.form</field>
        <field name="model">commercial.agent.area</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    
                    <group>
                        <field name="active" widget="boolean_toggle" />
                        <field name="name" />
                        <field name="description" />
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>