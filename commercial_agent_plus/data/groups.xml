<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_commercial_agent_plus">
            <field name="name">Commercial Agent Plus</field>
            <field name="description">The Commercial Agent Applilcation</field>
            <field name="sequence">90</field>
        </record>

        <record id="commercial_agent_plus_agent_group" model="res.groups">
            <field name="name">Agent</field>
            <field name="comment">Agent Permission Group.</field>
            <field name="implied_ids" eval="
                [(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_commercial_agent_plus"/>
        </record>

        <record id="commercial_agent_plus_manager_group" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">Manager Permission Group.</field>
            <field name="implied_ids" eval="
                [(4, ref('commercial_agent_plus_agent_group'))]"/>
            <field name="category_id" ref="module_category_commercial_agent_plus"/>
        </record>

        <record id="commercial_agent_plus_all_group" model="res.groups">
            <field name="name">Agent all</field>
            <field name="comment">add the odoo logic for rules to agent.</field>
            <field name="category_id" ref="base.module_category_usability"/>
        </record>

        <record id="commercial_agent_plus_agent_admin_group" model="res.groups">
            <field name="name">Agent Admin</field>
            <field name="comment">Manage all the agent app.</field>
            <field name="category_id" ref="base.module_category_usability"/>
        </record>
    </data>
</odoo>