<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem
        id="commercial_agent_plus_menu"
        name="Agents"
        sequence="10"
        web_icon="commercial_agent_plus,static/description/icon.png"
        groups="commercial_agent_plus.commercial_agent_plus_agent_group,commercial_agent_plus.commercial_agent_plus_agent_admin_group"/>
    
    <record id="commercial_agent_orders_action" model="ir.actions.act_window">
        <field name="name" >Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'allow_agent': True}</field>
        <field name="domain">[('commercial_agent_id','!=',False)]</field>
        <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'tree', 
         'view_id': ref('commercial_agent_plus.sale_order_view_tree_commercial_agent_plus')}),
        (0, 0, {'view_mode': 'form', 
         'view_id': ref('commercial_agent_plus.sale_order_view_form_commercial_agent_plus')})]"/>
    </record>
    <menuitem
        id="commercial_agent_plus_orders_menu"
        name="Orders"
        action="commercial_agent_orders_action"
        groups="commercial_agent_plus.commercial_agent_plus_agent_group,commercial_agent_plus.commercial_agent_plus_agent_admin_group"
        parent="commercial_agent_plus_menu"
        sequence="10"/>
    
    <record id="commercial_agent_customers_action" model="ir.actions.act_window">
        <field name="name" >Customers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,form</field>
        <field name="context">{'allow_agent': True}</field>
        <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'kanban', 
         'view_id': ref('commercial_agent_plus.res_partner_view_kanban_test')}),
        (0, 0, {'view_mode': 'form', 
         'view_id': ref('commercial_agent_plus.res_partner_view_form_test')})]"/>
    </record>
    <menuitem
        id="commercial_agent_plus_customers_menu"
        name="Customers"
        action="commercial_agent_customers_action"
        groups="commercial_agent_plus.commercial_agent_plus_agent_group,commercial_agent_plus.commercial_agent_plus_agent_admin_group"
        parent="commercial_agent_plus_menu"
        sequence="20"/>
    
    <record id="commercial_agent_product_action" model="ir.actions.act_window">
        <field name="name" >Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context" >{'search_default_agent_salable': True}</field>
        <field name="view_ids" eval="[(5, 0, 0),
        (0, 0, {'view_mode': 'kanban', 
         'view_id': ref('product.product_template_kanban_view')}),
        (0, 0, {'view_mode': 'tree', 
         'view_id': ref('commercial_agent_plus.product_template_view_tree_agent')}),
        (0, 0, {'view_mode': 'form', 
         'view_id': ref('commercial_agent_plus.product_template_view_form_agent')})]"/>
    </record>
    <menuitem
        id="commercial_agent_plus_products_menu"
        name="Products"
        action="commercial_agent_product_action"
        groups="commercial_agent_plus.commercial_agent_plus_agent_group,commercial_agent_plus.commercial_agent_plus_agent_admin_group"
        parent="commercial_agent_plus_menu"
        sequence="30"/>
    
    <record id="commercial_agent_settlement_action" model="ir.actions.act_window">
        <field name="name" >Settlements</field>
        <field name="res_model">commercial.agent.commission.settlement</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="commercial_agent_plus_settlement_menu"
        name="Settlement"
        groups="commercial_agent_plus.commercial_agent_plus_agent_group,commercial_agent_plus.commercial_agent_plus_agent_admin_group"
        parent="commercial_agent_plus_menu"
        action="commercial_agent_settlement_action"
        sequence="40"/>
    

    <record id="commercial_agent_sale_commission_action" model="ir.actions.act_window">
        <field name="name" >Commissions Orders</field>
        <field name="res_model">commercial.agent.sale.commission</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="commercial_agent_plus_commission_menu"
        name="Commissions Orders"
        action="commercial_agent_sale_commission_action"
        groups="commercial_agent_plus.commercial_agent_plus_agent_admin_group,commercial_agent_plus.commercial_agent_plus_agent_group"
        parent="commercial_agent_plus_menu"
        sequence="30"/>
    
    <record id="commercial_agent_areas_action" model="ir.actions.act_window">
        <field name="name" >Areas</field>
        <field name="res_model">commercial.agent.area</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="commercial_agent_plus_settings_menu"
        name="Settings"
        groups="base.group_system,commercial_agent_plus.commercial_agent_plus_agent_admin_group"
        parent="commercial_agent_plus_menu"
        sequence="100"/>
    <menuitem
        id="commercial_agent_plus_areas_menu"
        name="Areas"
        action="commercial_agent_areas_action"
        groups="base.group_system,commercial_agent_plus.commercial_agent_plus_agent_admin_group"
        parent="commercial_agent_plus_settings_menu"
        sequence="10"/>
    
    <record id="commercial_agent_commission_Agent_action" model="ir.actions.act_window">
        <field name="name" >Agent Commissions</field>
        <field name="res_model">commercial.agent.commission</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="commercial_agent_plus_agent_commissions_menu"
        name="Agent Commissions"
        action="commercial_agent_commission_Agent_action"
        groups="base.group_system,commercial_agent_plus.commercial_agent_plus_agent_admin_group"
        parent="commercial_agent_plus_settings_menu"
        sequence="20"/>
</odoo>
