<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="riba_res_partner_bank_form" model="ir.ui.view">
        <field name="name">res.partner.bank.form</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="account_banking_common.payment_config_notebook_res_partner_bank_form"/>
        <field name="arch" type="xml">

            <xpath expr="/form/group//notebook[@name='payment_config']" position="inside">
                <!-- <page name="riba" string="Ri.Ba.">-->
                <page name="riba" string="Ri.Ba. CBI" attrs="{'invisible': [('bank_is_wallet', '=', False)]}">
                    <style>
                          .o_form_label{
                          white-space:nowrap;
                          }
                    </style>

                    <group columns="2">
                        <group>
                            <field name="riba_transfer_journal"/>
                            <field name="riba_transfer_account"/>
                            <field name="riba_effetti_allo_sconto"/>
                            <field name="riba_default_bank_expenses_account"/>
                        </group>
                        <group>
                            <field name="riba_limite_effetti_sbf"/>
                            <field name="riba_impegno_effetti_sbf"/>
                            <field name="riba_importo_effetti_sbf"/>
                            <field name="riba_disponibilita_effetti_sbf"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>

