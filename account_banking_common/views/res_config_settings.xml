<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_common_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.common.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='analytic']" position="after">
                <h2>Impostazione Abbuoni</h2>
                <div class="row mt16 o_settings_container" id="rebate_settings">
                    <div class="col-12 col-lg-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label
                                        string="Abbuoni attivi"
                                        for="rebate_active"
                                        class="col-lg-3 o_light_label"
                                    />
                                    <field
                                        name="rebate_active"
                                        domain="[('company_id', '=', company_id), ('nature', 'in', ['R', 'C'])]"
                                        options="{'no_create_edit':True}"
                                    />
                                    <label
                                        string="Abbuoni passivi"
                                        for="rebate_passive"
                                        class="col-lg-3 o_light_label"
                                    />
                                    <field
                                        name="rebate_passive"
                                        domain="[('company_id', '=', company_id), ('nature', 'in', ['R', 'C'])]"
                                        options="{'no_create_edit':True}"
                                    />
                                    <label
                                        string="Abbuoni delta"
                                        for="rebate_delta"
                                        class="col-lg-3 o_light_label"
                                    />
                                    <field
                                        name="rebate_delta"
                                        options="{'no_create_edit':True}"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>

    </record>

</odoo>
