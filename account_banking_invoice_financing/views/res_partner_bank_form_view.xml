<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_financing_res_partner_bank_form" model="ir.ui.view">
        <field name="name">res.partner.bank.form</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form"/>
        <field name="arch" type="xml">

            <xpath expr="/form/group//notebook[@name='payment_config']" position="inside">
                <page name="invoice_financing" string="Anticipo Fatture" attrs="{'invisible': [('bank_is_wallet', '=', False)]}">
                    <style>
                          .o_form_label{
                          white-space:nowrap;
                          }
                    </style>
                        <group colspan="4" attrs="{'invisible': [('bank_is_wallet', '=', False)]}">
                            <group>
                                    <field name="invoice_financing_evaluate"/>
                            </group>
                            <group>
                                    <field
                                          name="invoice_financing_percent"
                                          attrs="{
                                          'invisible': [('invoice_financing_evaluate', '=', False)],
                                          'required' : [('invoice_financing_evaluate', '!=', False)]
                                          }"
                                          />
                            </group>

                            <group colspan="2">
                                <group>
                                    <field name="sezionale"/>
                                    <field name="effetti_allo_sconto"/>
                                    <field name="banca_conto_effetti"/>
                                    <field name="conto_costi_bancari"/>
                                </group>
                                <group>
                                    <field name="limite_anticipo_fatture" />
                                    <field name="importo_anticipo_fatture" />
                                    <field name="disponibilita_anticipo_fatture"/>
                                </group>
                            </group>
                        </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
