<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_bank_journal_form_invoice_financing" model="ir.ui.view">
        <field name="name">account.bank.journal.form.invoice.financing</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_bank_journal_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='bank_statement']" position="after">
                <group string="Castelletto anticipo fatture" >
                    <group>
                        <field name="limite_anticipo_fatture" />
                        <field name="disponibilita_anticipo_fatture"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>
</odoo>

