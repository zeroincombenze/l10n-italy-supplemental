<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_ddt_sale" inherit_id="account.report_invoice_document"  name="DDT Sale references">
            <xpath expr="//table[@name='summary']" position="after">
                    <t t-if="o.ddt_ids">
                        <div style="margin: 20px 0 15px 0;">
                            <table class="table table-sm" id="ddt_table" name="ddt_table">
                                <thead>
                                    <tr>
                                        <th
                                            class="text-center"
                                            style="
                                                border-bottom: 1px solid #83d2fb;
                                                border-top: 1px solid #83d2fb;
                                                background-color: #fff;
                                                margin: 5px 0 0 0;
                                                text-transform: uppercase;
                                            ">
                                            <span>Transport Documents</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody >
                                   <t t-foreach="o.ddt_ids" t-as="ddt">
                                        <tr>
                                            <td >
                                                <span t-esc="ddt.ddt_number"/>
                                            </td>
                                       </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </t>

                    <t t-set="orders" t-value="o.get_sale_order_references()"/>
                    <t t-if="orders">
                        <div style="margin: 20px 0 15px 0;">
                            <table class="table table-sm" id="sale_order_table" name="sale_order_table">
                                <thead>
                                    <tr>
                                        <th
                                            class="text-center"
                                            style="
                                                border-bottom: 1px solid #83d2fb;
                                                border-top: 1px solid #83d2fb;
                                                background-color: #fff;
                                                margin: 5px 0 0 0;
                                                text-transform: uppercase;
                                            ">
                                            <span>Sale Orders</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody >
                                   <t t-foreach="orders" t-as="order_name">
                                        <tr>
                                            <td >
                                                <span t-esc="order_name"/>
                                            </td>
                                       </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

<!--                       <div style="border: 1px solid #dee2e6;margin: 15px 0;">-->
<!--                            <p>-->
<!--                                <b>Sale Order</b> <br />-->
<!--                                <t t-foreach="orders" t-as="order_name">-->
<!--                                    <span t-esc="order_name"/><br />-->
<!--                               </t>-->
<!--                            </p>-->
<!--                       </div>-->
                    </t>

           </xpath>
        </template>

    </data>
</odoo>
