<odoo>
  <data>

    <record id="view_account_journal_credit_note_form" model="ir.ui.view">
        <field name="name">account.journal.credit.note.form.inherit</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='refund_sequence']" position="after">
                <field name="hide_refund" invisible="1"/>
                <field name="is_refund_journal" attrs="{'invisible': [('hide_refund','=', True)]}" groups="base.group_no_one"/>
            </xpath>

            <xpath expr="//field[@name='refund_sequence']" position="attributes">
                <attribute name="attrs">{'invisible': [('hide_refund','=',True)]}</attribute>
            </xpath>

        </field>
    </record>

  </data>
</odoo>