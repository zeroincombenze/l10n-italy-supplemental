<odoo>

    <record id="view_account_config_settings" model="ir.ui.view">
        <field name="name">sale_order_incoterm_plus.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='delivery']/../div[last()]" position="after">

                <div class="col-12 col-lg-6 o_setting_box" id="delivery_default_incoterm" modifiers="{}">
                    <div class="o_setting_left_pane" modifiers="{}"/>
                    <div class="o_setting_right_pane" modifiers="{}">
                        <span class="o_form_label" modifiers="{}">
                              Incoterm Vendita
                        </span>
                        <div class="text-muted" modifiers="{}">

                             Clausola Incoterm di default per la vendita

                        </div>
                        <div class="text-muted" modifiers="{}">
                            <field name="sale_incoterm_default" modifiers="{}"/>
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>

</odoo>

