<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wizard_create_export_invoice_2c" model="ir.ui.view">
            <field name="name">Create Export Invoice</field>
            <field name="model">wizard.create.export.invoice</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Move Template" >
                    <group col="2" width="600" height="500">
                        <group>
                            <field name="journal_id" />
                            <field name="date_from" />
                            <field name="date_to" />
                        </group>
                        <group col="2">
                            <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="1"/>
                            <button icon="gtk-ok" name="create_export_invoice_sdi" string="Start Export" type="object" colspan="1" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_create_export_invoice_2c" model="ir.actions.act_window">
            <field name="name">Create Export Invoice</field>
            <field name="res_model">wizard.create.export.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_create_export_invoice_2c"/>
            <field name="target">current</field>
        </record>

        <menuitem action="action_create_export_invoice_2c" id="menu_export_invoice"
                              parent="l10n_it_fatturapa.menu_fattura_pa_receivables"/>

    </data>
</odoo>
