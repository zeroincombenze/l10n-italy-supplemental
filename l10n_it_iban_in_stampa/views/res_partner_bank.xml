<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_bank_printing_form" model="ir.ui.view">
        <field name="name">res.partner.bank.printing.form</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/group[1]" position="after">
                <group string="Configurazioni di stampa" colspan="2">
                    <group>
                        <field name="is_company_bank" invisible="'1'"/>
                        <field
                            name="part_of_default_banks_2_print"
                            attrs="{'invisible': [('is_company_bank', '=', False)]}"
                        />
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
