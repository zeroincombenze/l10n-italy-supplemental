<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_iban" inherit_id="sale.report_saleorder_document" name="Iban bank">
        <xpath expr="//div[@class='clearfix']" position="after">
            <div style="display: inline-block; height: 100%; vertical-align: bottom; width: 0px;"></div>
            <div style="page-break-inside: avoid;">
                <table class="table table-bordered table-sm" name="summary" width="100%">
                    <tbody>
                        <tr>
                            <td rowspan="2" class="text-left o_price_total summary_font">
                                <strong>Carriage Condition</strong>
                                <br/>
                                <t t-if="doc.carriage_condition_id">
                                    <span t-field="doc.carriage_condition_id"/>
                                </t>
                                <t t-else="">
                                    -
                                </t>
                            </td>
                            <td class="text-left summary_font" rowspan="2">
                                <strong>Transportation Method</strong>
                                <br/>
                                <t t-if="doc.transportation_method_id">
                                    <span t-field="doc.transportation_method_id"/>
                                </t>
                                <t t-else="">
                                    -
                                </t>
                            </td>
                            <td class="text-left summary_font" rowspan="2">
                                <strong>Payment Terms</strong>
                                <br/>
                                <t t-if="doc.payment_term_id" name="payment_term">
                                    <span t-field="doc.payment_term_id.name"/>
                                </t>
                                <t t-else="">
                                    -
                                </t>
                            </td>
                            <td class="text-left summary_font" rowspan="2">
                                <strong>Bank Account:</strong>
                                <t t-if="doc.bank_2_print">
                                    <t t-foreach="doc.bank_2_print" t-as="bank">
                                        <br/>
                                        <br/>
                                        <span t-field="bank.acc_number"/>
                                        <br/>
                                        <span t-if="bank.bank_name" t-field="bank.bank_name"/>
                                    </t>
                                </t>
                                <t t-else="">
                                    -
                                </t>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
    </template>
</odoo>
