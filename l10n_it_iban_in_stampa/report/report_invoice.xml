<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_iban" inherit_id="account.report_invoice_document"  name="Iban bank">
            <xpath expr="//table[@name='summary']/tbody//td[@id='bank']" position="replace">
                <td colspan="4" id="bank" class="summary_font">Bank:
                    <t t-if="o.bank_2_print">
                        <t t-foreach="o.bank_2_print" t-as="bank">
                            <br />
                            <br />
                            <span t-field="bank.acc_number"/>
                            <br />
                            <span t-if="bank.bank_name" t-field="bank.bank_name"/>
                        </t>
                    </t>
                    <t t-else="">
                    -
                    </t>
                </td>
           </xpath>
        </template>
               
    </data>    
</odoo>        
