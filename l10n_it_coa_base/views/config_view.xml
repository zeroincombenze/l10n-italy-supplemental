<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.coa_base</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='analytic']" position="after">
                <h2>Localizzazione Italiana Evoluta</h2>
                <div class="row mt16 o_settings_container" id="fatturapa_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label string="Profilo Contabile" for="account_profile_id" class="col-lg-3 o_light_label"/>
                                    <field name="account_profile_id" domain="[('company_id', '=', company_id)]" options="{'no_create_edit':True}"/>
                                    <!-- <field name="account_profile_id" domain="[('company_id', '=', company_id)]" options="{'no_open': True, 'no_create_edit':True}"/>-->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

