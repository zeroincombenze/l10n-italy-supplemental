<?xml version="1.0" encoding="utf-8"?>
<odoo>
     
    <record id="profile_account_tree" model="ir.ui.view">
        <field name="name">profile.account.tree</field>
        <field name="model">italy.profile.account</field>
        <field name="arch" type="xml">
            <tree string="Profilo contabile">
                <field name="name"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="profile_account_form" model="ir.ui.view">
        <field name="name">profile.account.form</field>
        <field name="model">italy.profile.account</field>
        <field name="arch" type="xml">
            <form string="Profilo contabile">
                <group>
                    <field name="name"/>
                    <field name="coa_fixed" invisible="1"/>
                    <field name="company_id" attrs="{'readonly': [('coa_fixed', '!=', False)]}"/>
                    <field name="coa_zero" attrs="{'readonly': [('coa_fixed', '!=', False)]}"/>
                    <field name="cutoff_active"/>
                    <field name="cutoff_passive"/>
                    <field name="prepayment_active"/>
                    <field name="prepayment_passive"/>
                    <field name="invtobericeived_active"/>
                    <field name="invtobericeived_passive"/>
                    <field name="refundtobericeived_active"/>
                    <field name="refundtobericeived_passive"/>
                    <!-- <field name="default_account_payable"/>-->
<!--                    <field name="default_account_receivable"/>-->
                </group>
            </form>
        </field>
    </record>

    <record id="action_profile_account" model="ir.actions.act_window">
        <field name="name">Account Profile</field>
        <field name="res_model">italy.profile.account</field>
        <field name="view_id" ref="profile_account_tree"/>
    </record>

    <menuitem id="menu_profile_account" name="Profilo contabile"
              parent="account.account_account_menu"
              action="action_profile_account"
              groups="account.group_account_manager" sequence="90"/>

</odoo>
