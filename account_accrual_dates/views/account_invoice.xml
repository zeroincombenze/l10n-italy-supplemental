<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_form" model="ir.ui.view">
        <field name="name">accrual.invoice_form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_analytic_id']" position="after">
                <field name="accrual_start_date"/>
                <field name="accrual_end_date"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">accrual.invoice_supplier_form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_analytic_id']" position="after">
                <field name="accrual_start_date"/>
                <field name="accrual_end_date"/>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_line_form" model="ir.ui.view">
        <field name="name">accrual.invoice_line_form</field>
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='discount']/.." position="after">
                <group name="accrual_start_end_dates">
                    <field name="accrual_start_date"/>
                    <field name="accrual_end_date"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>

