<odoo>
    <data>

        <record model="ir.ui.view" id="verify_license.list">
            <field name="name">Verifica Licdenza</field>
            <field name="model">license_verification</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Verifica Licenza">
                    <field name="expiry_date"/>
                    <field name="n_users"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="verify_license.action_window">
            <field name="name">Verifica Licefnza</field>
            <field name="res_model">license_verification</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_license_company_form" model="ir.ui.view">
            <field name="name">view_form_license_company</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page" position="inside">
                    <group colspan="4">
                        <group string="Licenza">
                            <button name="verify_license.action_window" type="action" string="Aggiungi Licenza"/>
                        </group>
                    </group>

                </xpath>

            </field>
        </record>

                <menuitem
                        name="Verifica licenza"
                        groups="base.group_no_one"
                        id="menu_license"
                        parent="base.menu_management"
                        sequence="150"/>

                <menuitem
                        id="add_license"
                        name="Aggiungi Licenza"
                        parent="menu_license"
                        groups="base.group_no_one"
                        action="verify_license.action_window"
                />

    </data>
</odoo>